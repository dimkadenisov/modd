mixin project-card(props = {})
  include project-card-name
  include project-card-img
  include button

  - const { name, imgSrc } = props;

  a(target="blank").project-card&attributes(attributes)
    .project-card__content
      +project-card-name= name
      +project-card-img(src= imgSrc, alt= name data-object-fit="contain")
    .project-card__overlay
    +button({tag: 'div'})
      |Открыть
